/* Tab header buttons */
.tab-header {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.tab-btn {
  padding: 15px 30px;;
  text-align: center;
  cursor: pointer;
  background-color: #f4f4f4;
  border: none;
  outline: none;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.tab-btn.active {
  background-color: #FAB230;
  color: #fff;
  font-weight: bold;
}

/* Tab content */
.tab-content-ttt {
  padding: 50px 0;
  background-color: transparent;
  border-top: none;
  position: relative;
  overflow: hidden;
}

/* Tab panel */
.tab-panel {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  transition: opacity 0.5s ease-in-out;
  pointer-events: none; /* Prevent interactions when hidden */
}

.tab-panel.active {
  opacity: 1;
  position: relative;
  pointer-events: auto;
}
