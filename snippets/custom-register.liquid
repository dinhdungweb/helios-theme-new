<div class="register-container">
  <div class="register-image">
    <img src="https://cdn.shopify.com/s/files/1/0644/2958/8701/files/z6338059277246_4f87da81b2baad3df796023a0506fa17_2.jpg?v=1740109335" loading="lazy" alt="Register Image">
  </div>
  <div class="register-form">
    <div class="central py-medium" id="template">
      <div id="customer">
        <!-- Create Customer -->
        <div id="create-customer">
          <div class="template_header">
            <h1 class="h2 feature-header" data-cc-animate>{{ 'customer.register.title' | t }}</h1>
          </div>

          {% form 'create_customer' %}
          {% if form.errors %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="form">
            <!-- First Name -->
            <div class="input-row" data-cc-animate data-cc-animate-delay="0.2s">
              <input aria-label="{{ 'customer.register.first_name' | t }}" placeholder="{{ 'customer.register.first_name' | t }}" type="text" name="customer[first_name]" id="first_name" required />
            </div>

            <!-- Last Name -->
            <div class="input-row" data-cc-animate data-cc-animate-delay="0.35s">
              <input aria-label="{{ 'customer.register.last_name' | t }}" placeholder="{{ 'customer.register.last_name' | t }}" type="text" name="customer[last_name]" id="last_name" required />
            </div>

            <!-- Email -->
            <div class="input-row" data-cc-animate data-cc-animate-delay="0.5s">
              <input aria-label="{{ 'customer.register.email' | t }}" placeholder="{{ 'customer.register.email' | t }}" type="email" name="customer[email]" id="email" required />
            </div>

            <!-- Password -->
            <div class="input-row" data-cc-animate data-cc-animate-delay="0.65s">
              <input aria-label="{{ 'customer.register.password' | t }}" placeholder="{{ 'customer.register.password' | t }}" type="password" name="customer[password]" id="password" required />
            </div>

            <!-- Confirm Password -->
            <div class="input-row" data-cc-animate data-cc-animate-delay="0.75s">
              <input aria-label="Xác nhận mật khẩu" placeholder="Xác nhận mật khẩu" type="password" id="confirm_password" required />
            </div>

            <!-- TỰ ĐỘNG GÁN TAG -->
            <input type="hidden" name="customer[tags]" value="HELIOSCLUB" />

            <!-- Submit -->
            <div class="wide-action">
              <input type="submit" value="{{ 'customer.register.submit' | t }}" data-cc-animate data-cc-animate-delay="0.8s" onclick="return validatePassword()" />
              <span class="note" data-cc-animate data-cc-animate-delay="0.95s">
                <a data-cc-animate-click href="{{ routes.root_url }}">{{ 'customer.register.cancel' | t }}</a>
              </span>
            </div>
          </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script kiểm tra mật khẩu -->
<script>
  function validatePassword() {
    var password = document.getElementById("password").value;
    var confirm_password = document.getElementById("confirm_password").value;
    if (password !== confirm_password) {
      alert("Mật khẩu không khớp. Vui lòng nhập lại.");
      return false;
    }
    return true;
  }
</script>

<style>
  /* Container */
  .register-container {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    width: 1200px;
    margin: 50px auto;
}

  /* Image */
  .register-image {
    flex: 1;
    text-align: center;
    padding: 0 15px;
}

  .register-image img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }

  /* Form */
  .register-form {
    flex: 1;
    max-width: 700px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .register-container {
      flex-direction: column; /* Đổi thành dọc */
      text-align: center;
    }

    .register-image,
    .register-form {
      max-width: 100%;
    }
  }
</style>
