.customer-account-container {
  display: flex;
  align-items: stretch;
  background: #000;
  overflow: hidden;
  gap: 20px;
}
.customer-info {
  margin-bottom: 20px;
  background: #111;
  padding: 12px;
  border-radius: 3px;
  /* border: 2px solid #fab320; */
  width: 100%;
  overflow: hidden;
}
.customer-avatar {
  width: 45px;
  height: 45px;
  border: 1px solid #fab320;
  border-radius: 50%;
  margin-right: 10px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}
a.logout-button {
  background: #f2f2f2;
  padding: 7px 15px;
  color: #111;
  border-radius: 3px;
  font-size: 12px;
}
.customer-sidebar {
  max-width: 350px;
  width: 100%;
  /* padding: 20px;
  background: #111; */
  color: #fff;
  transition: all 0.3s ease;
}
.account-tabs {
  list-style: none;
  padding: 0;
}
.account-tabs li {
  padding: 12px;
  cursor: pointer;
  border-bottom: 1px solid #333;
  transition: all .3s;
  border-radius: 3px;
  text-transform: uppercase;
  font-size: 13px;
}
.account-tabs li:hover {
  background: #333;
  color: #f2f2f2;
}
.account-tabs .active {
  background: #f2f2f2;
  color: #000;
}
.customer-content {
  flex: 1;
  padding: 20px 50px;
  transition: all .3s ease;
  position: relative;
}
.customer-tab-content {
  display: none;
  animation: fadeIn 0.3s ease-in-out;
  padding: 0 0 50px;
}
.customer-tab-content.active {
  display: block;
}
