.progress-bar {
  width: 100%;
  background: #333;
  height: 6px;
  border-radius: 5px;
  overflow: hidden;
}
.progress-fill {
  display: block;
  height: 100%;
  background: #fab320;
  transition: width 0.5s ease-in-out;
}
.orders-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
  background: #1a1a1a;
  overflow: hidden;
}
.orders-table th, .orders-table td {
  padding: 10px;
  border: 1px solid #555;
  text-align: left;
}
.orders-table th {
  background: #f2f2f2;
  color: #000;
  font-weight: bold;
}
.orders-table tr:nth-child(even) {
  background: #222;
}
.orders-table tr:hover {
  background: #333;
}
.customer-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.customer-name-email {
  text-align: left;
  max-width: 155px;
}
.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
@media screen and (max-width: 991px) {
  .customer-account-container {
    flex-wrap: wrap;
  }
  .customer-sidebar {
    max-width: 100%;
  }
  .account-tabs {
    display: flex;
    overflow-x: auto;
    white-space: nowrap;
    -webkit-overflow-scrolling: touch;
    margin: 0;
  }
  .account-tabs li {
    flex: 0 0 auto;
  }
  .customer-content {
    padding: 30px 0;
  }
  .customer-account-container {
    gap: 0;
  }
  .customer-content::after {
    display: none;
  }
}
