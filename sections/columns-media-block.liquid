{% style %}
.overlay-blocks-container {
  display: flex;
  flex-wrap: wrap;
}

.overlay-block {
  flex: 1 1 100%;
  position: relative;
  overflow: hidden;
}

@media (min-width: 768px) {
  .overlay-block {
    flex: 1 1 50%;
  }

  {% for block in section.blocks %}
    .heading-{{ block.id }} {
      font-size: {{ block.settings.heading_size }}px;
    }

    .description-{{ block.id }} {
      font-size: {{ block.settings.description_size }}px;
      line-height: 1.5rem;
      width: 55%;
    }
  {% endfor %}
}

.overlay-block img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

.overlay-bg {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.07);
  z-index: 1;
}

.overlay-content {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  padding: 1.5rem;
  z-index: 2;
}

/* Horizontal alignment */
.overlay-content.h-left { justify-content: flex-start; text-align: left; }
.overlay-content.h-center { justify-content: center; text-align: center; }
.overlay-content.h-right { justify-content: flex-end; text-align: right; }

/* Vertical alignment */
.overlay-content.v-top { align-items: flex-start }
.overlay-content.v-middle { align-items: center }
.overlay-content.v-bottom { align-items: flex-end }

.overlay-content a {
  background-color: white;
  color: black;
  padding: 8px 16px;
  text-decoration: none;
  font-weight: bold;
  margin-top: 10px;
}
{% endstyle %}

<div class="overlay-blocks-container">
  {% for block in section.blocks %}
    {% assign image = block.settings.image %}
    {% if image %}
      <div class="overlay-block">
        <img src="{{ image | image_url: width: 800 }}" alt="{{ block.settings.heading | escape }}">

        {% if section.settings.enable_overlay %}
          <div class="overlay-bg"></div>
        {% endif %}

        <div class="overlay-content h-{{ block.settings.text_align_horizontal }} v-{{ block.settings.text_align_vertical }}"
             style="color: {{ block.settings.text_color }}">
          {% if block.settings.heading %}
            <h3 class="heading-{{ block.id }}">{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.description %}
            <p class="description-{{ block.id }}">{{ block.settings.description }}</p>
          {% endif %}
          {% if block.settings.button_label and block.settings.link %}
            <a href="{{ block.settings.link }}">{{ block.settings.button_label }}</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Horizontal Overlay Blocks",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Bật overlay nền mờ",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "media_block",
      "name": "Block ảnh",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ảnh"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Tiêu đề"
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Kích thước tiêu đề (px)",
          "min": 14,
          "max": 50,
          "step": 1,
          "default": 20
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Mô tả"
        },
        {
          "type": "range",
          "id": "description_size",
          "label": "Kích thước mô tả (px)",
          "min": 10,
          "max": 30,
          "step": 1,
          "default": 14
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Màu chữ",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "text_align_horizontal",
          "label": "Căn ngang văn bản",
          "options": [
            { "value": "left", "label": "Trái" },
            { "value": "center", "label": "Giữa" },
            { "value": "right", "label": "Phải" }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_align_vertical",
          "label": "Căn dọc văn bản",
          "options": [
            { "value": "top", "label": "Trên" },
            { "value": "middle", "label": "Giữa" },
            { "value": "bottom", "label": "Dưới" }
          ],
          "default": "middle"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Liên kết"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Nhãn nút"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Blocks Overlay",
      "category": "Custom",
      "blocks": [
        { "type": "media_block" },
        { "type": "media_block" }
      ]
    }
  ]
}
{% endschema %}