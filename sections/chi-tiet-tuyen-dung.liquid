{% schema %}
{
  "name": "Chi tiết tuyển dụng",
  "settings": [
    {
      "type": "paragraph",
      "content": "Hiển thị thông tin chi tiết công việc từ metafield của page"
    }
  ],
  "presets": [
    {
      "name": "Chi tiết tuyển dụng"
    }
  ]
}
{% endschema %}

<div class="job-detail-summary">
  {% render "breadcrumbs" %}
  <div class="job-page_title">{{ page_title }}</div>
  <div class="job-detail">
    <div class="job-row">
      {% if page.metafields.custom.salary %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M12 1v22M17 5H7a4 4 0 0 0 0 8h10a4 4 0 0 1 0 8H6" /></svg>
        <span class="label">Mức lương:</span> {{ page.metafields.custom.salary }}
      </div>
      {% endif %}
      {% if page.metafields.custom.working_time %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><circle cx="12" cy="12" r="10" /><path d="M12 6v6l4 2" /></svg>
        <span class="label">Thời gian:</span> {{ page.metafields.custom.working_time }}
      </div>
      {% endif %}
    </div>
  
    <div class="job-row">
      {% if page.metafields.custom.experience %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M9 11l3 3L22 4" /><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" /></svg>
        <span class="label">Kinh nghiệm:</span> {{ page.metafields.custom.experience }}
      </div>
      {% endif %}
      {% if page.metafields.custom.gender %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M16 14c2.21 0 4-1.79 4-4S18.21 6 16 6s-4 1.79-4 4 1.79 4 4 4zM8 14c2.21 0 4-1.79 4-4S10.21 6 8 6 4 7.79 4 10s1.79 4 4 4zM8 16c-2.67 0-8 1.34-8 4v2h8v-2c0-.68.28-1.3.73-1.77M16 16c-1.37 0-2.61.35-3.61.95" /></svg>
        <span class="label">Giới tính:</span> {{ page.metafields.custom.gender }}
      </div>
      {% endif %}
    </div>
  
    <div class="job-row">
      {% if page.metafields.custom.education %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M4 4h16v2H4zM4 8h16v2H4zM4 12h16v2H4zM4 16h16v2H4z" /></svg>
        <span class="label">Trình độ:</span> {{ page.metafields.custom.education }}
      </div>
      {% endif %}
      {% if page.metafields.custom.location %}
      <div class="job-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 0 1 18 0z" /><circle cx="12" cy="10" r="3" /></svg>
        <span class="label">Địa điểm:</span> {{ page.metafields.custom.location }}
      </div>
      {% endif %}
    </div>
  </div>
  <div class="job-content">{{ page.content }}</div>
</div>

<style>
  .job-page_title {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 30px;
    line-height: 1;
}
  .job-detail-summary {
    width: 800px;
    max-width: 100%;
    margin: 0px auto 50px;
    padding: 20px;
}
  .job-detail-summary .breadcrumbs {
    padding: 0;
  }
  .job-detail {
    border: 1px solid #333;
    padding: 20px 20px 5px;
    border-radius: 15px;
    background: #111111;
    margin: 30px 0 50px;
}
  .job-row {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 10px;
  }

  .job-item {
    display: flex;
    align-items: center;
    width: 48%;
    margin-bottom: 10px;
    border-bottom: 1px solid #333;
    padding-bottom: 10px;
}

  .job-item .icon {
    width: 20px;
    height: 20px;
    stroke-width: 1.5;
    margin-right: 8px;
    color: #666;
    flex-shrink: 0;
  }

  .job-item .label {
    font-weight: bold;
    margin-right: 6px;
  }

  @media screen and (max-width: 768px) {
    .job-page_title {
      font-size: 1.8rem;
    }
    .job-item {
      width: 100%;
    }
  }
</style>