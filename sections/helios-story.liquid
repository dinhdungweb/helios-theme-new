<div class="helios_story_container">
  {% for block in section.blocks %}
    <a class="helios-story-item" href="{{ block.settings.helios_story_link }}" title="{{ block.settings.helios_story_title }}">
      <div class="helios-story-img">
        <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.helios_story_title }}" loading="lazy">
      </div>
      <div class="helios-story-title card-title-ellipsis">
        {{ block.settings.helios_story_title }}
      </div>
    </a>
  {% endfor %}
</div>

{% style %}
.helios_story_container::-webkit-scrollbar {
  display: none;
}
.helios_story_container {
    width: 1400px;
    max-width: 100%;
    display: grid;
    grid-template-columns: repeat({{ section.settings.item_per_row }}, 1fr);
    gap: 20px;
    margin: 0 auto;
    padding: 50px 20px 20px;
}
a.helios-story-item {
    display: flex;
    justify-content: start;
    align-items: center;
    background: #111;
    padding: 5px;
    border-radius: 5px;
    transition: 0.3s ease;
}
a.helios-story-item:hover {
    background: #f2f2f2;
    color: #111;
    transform: scale(1.05);
    transition: 0.3s ease;
}
 
.helios-story-img img {
    width: 180px;
    object-fit: cover;
}
.helios-story-title {
    font-size: inherit;
    line-height: 1.5;
    width: 100%;
    padding: 0;
}
.text-left {
  text-align: left;
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
@media screen and (max-width:767.8px) {
.helios_story_container {
  width: 100%;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
  padding: 50px 15px 50px;
}

.helios-story-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.helios-story-img {
    overflow: hidden;
    width: 100px;
}
}
@media screen and (min-width: 1100px) {
   a.helios-story-item:hover img {
    width: 120px;
    transition: 0.5s ease;
    position: absolute;
    top: -35%;
    left: 50%;
    transform: translate(-50%, 0);
}
  a.helios-story-item:hover .helios-story-title {
    text-align: center;
  }
}
{% endstyle %}
{% schema %}
  {
    "name": "Helios Story Highlight",
    "class": "helios-story",
    "settings": [
      {
        "type": "range",
        "id": "item_per_row",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Item per row (only desktop)",
        "default": 4
      }
    ],
    "blocks": [
      {
        "type": "title",
        "name": "Bộ sưu tập nổi bật",
        "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          },
          {
            "type": "text",
            "id": "helios_story_title",
            "label": "Heading",
            "default": "Nhập tên story"
          },
          {
            "type": "range",
            "id": "font_size",
            "min": 12,
            "max": 24,
            "step": 1,
            "unit": "px",
            "label": "Font size",
            "default": 14
          },
          {
            "type": "select",
            "id": "vertical_alignment",
            "label": "Heading alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "center"
          },
          {
            "type": "url",
            "id": "helios_story_link",
            "label": "Story link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Helios Story Highlight",
        "settings": {}
      }
    ]
  }
{% endschema %}