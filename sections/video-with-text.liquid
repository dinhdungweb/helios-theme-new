<!-- Section: Media (Video or Image) with Text and Buttons -->
<section class="media-text-section">
  <div class="media-text-container {% if section.settings.content_position == 'left' %}reverse{% endif %}">
    <div class="media-text-media">
      {% if section.settings.media_type == 'video' %}
        <video class="desktop-media" autoplay loop muted playsinline>
          <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <video class="mobile-media" autoplay loop muted playsinline>
          <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% elsif section.settings.media_type == 'image' %}
        <img
          class="desktop-media"
          src="{{ section.settings.desktop_image_url | img_url: 'master' }}"
          alt="{{ section.settings.heading }}"
        >
        <img
          class="mobile-media"
          src="{{ section.settings.mobile_image_url | img_url: 'master' }}"
          alt="{{ section.settings.heading }}"
        >
      {% endif %}
    </div>
    <div class="media-text-content align-{{ section.settings.text_alignment }}">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
      <div class="media-text-buttons">
        {% for block in section.blocks %}
          <a href="{{ block.settings.button_link }}" class="media-text-btn" target="_blank" rel="noopener">
            {{ block.settings.button_text }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.media-text-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.media-text-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.media-text-container.reverse {
  flex-direction: row-reverse;
}
.media-text-media {
  flex: 1;
  max-width: 50%;
  position: relative;
}
.media-text-media .mobile-media {
  display: none;
}
.media-text-media video,
.media-text-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.media-text-content {
    display: flex;
    flex: 1;
    max-width: 50%;
    padding: 20px 40px;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
}
.media-text-content.align-left {
  text-align: left;
  align-items: flex-start;
}
.media-text-content.align-center {
  text-align: center;
  align-items: center;
}
.media-text-content.align-right {
  text-align: right;
  align-items: flex-end;
}
.media-text-content h2 {
  font-size: 24px;
  margin-bottom: 10px;
}
.media-text-content p {
  font-size: 16px;
  line-height: 1.5;
  margin: 0;
}
.media-text-buttons {
  margin-top: 24px;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  gap: 12px;
  overflow-x: auto;
  padding-bottom: 8px;
  scrollbar-width: thin;
  scrollbar-color: #333 #111;
  -webkit-overflow-scrolling: touch;
  max-width: 100%;
  width: 100%;
  scroll-snap-type: x mandatory;   /* Snap hiệu ứng */
}
.media-text-btn {
    display: inline-block;
    min-width: 155px;
    font-size: 0.9rem;
    white-space: nowrap;
    text-align: center;
    padding: 10px 10px;
    background: #fab320;
    color: #111;
    text-decoration: none;
    border-radius: 3px;
    transition: background 0.2s;
    scroll-snap-align: start;
}
.media-text-btn:hover {
  background: #F2F2F2;
}
@media (min-width: 1300px) {
  .media-text-content {
    padding: 20px 50px;
  }
}
/* Responsive styling for mobile */
@media (max-width: 768px) {
  .media-text-container,
  .media-text-container.reverse {
    flex-direction: column !important;
  }
  .media-text-media .desktop-media {
    display: none;
  }
  .media-text-media .mobile-media {
    display: block;
  }
  .media-text-media {
    max-width: 100%;
    margin-bottom: 20px;
  }
  .media-text-content {
    max-width: 100%;
    text-align: center;
    padding: 20px 16px;
  }
  .media-text-buttons {
    gap: 8px;
    padding-bottom: 4px;
  }
}
.media-text-buttons::-webkit-scrollbar {
  height: 6px;
}
.media-text-buttons::-webkit-scrollbar-thumb {
  background: #bbb;
  border-radius: 3px;
}
.media-text-buttons::-webkit-scrollbar-track {
  background: #fff;
}
</style>

{% schema %}
{
  "name": "Media with Text Custom",
  "settings": [
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        { "value": "video", "label": "Video" },
        { "value": "image", "label": "Image" }
      ],
      "default": "video"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "left", "label": "Text Left - Media Right" },
        { "value": "right", "label": "Media Left - Text Right" }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "url",
      "id": "desktop_video_url",
      "label": "Desktop Video URL"
    },
    {
      "type": "url",
      "id": "mobile_video_url",
      "label": "Mobile Video URL"
    },
    {
      "type": "image_picker",
      "id": "desktop_image_url",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image_url",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Your descriptive text here."
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Click Here"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Media with Text Custom",
      "category": "Custom",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
