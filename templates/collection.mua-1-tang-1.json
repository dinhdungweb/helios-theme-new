ld;\n  color: yellow;\n  text-shadow: 0 0 8px rgba(255, 255, 0, 0.6);\n}\n\n<\/style>\n<script>\ndocument.addEventListener(\"DOMContentLoaded\", function () {\n  \/\/ 🕒 Ngày kết thúc đếm ngược (2025-02-20 18:00:00)\n  const countdownDate = new Date(\"2025-02-28 23:59:00\").getTime();\n\n  function updateCountdown() {\n    const now = new Date().getTime();\n    const timeLeft = countdownDate - now;\n\n    if (timeLeft < 0) {\n      document.querySelector(\".countdown-timer\").innerHTML = \"<h3>Đã kết thúc!<\/h3>\";\n      clearInterval(countdownInterval);\n      return;\n    }\n\n    const days = Math.floor(timeLeft \/ (1000 * 60 * 60 * 24));\n    const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) \/ (1000 * 60 * 60));\n    const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) \/ (1000 * 60));\n    const seconds = Math.floor((timeLeft % (1000 * 60)) \/ 1000);\n\n    document.getElementById(\"days\").textContent = days < 10 ? \"0\" + days : days;\n    document.getElementById(\"hours\").textContent = hours < 10 ? \"0\" + hours : hours;\n    document.getElementById(\"minutes\").textContent = minutes < 10 ? \"0\" + minutes : minutes;\n    document.getElementById(\"seconds\").textContent = seconds < 10 ? \"0\" + seconds : seconds;\n  }\n\n  \/\/ Cập nhật mỗi giây\n  updateCountdown();\n  const countdownInterval = setInterval(updateCountdown, 1000);\n});\n\n<\/script>"}},"rich_text_3ciPe4":{"type":"rich-text","settings":{"subheading":"","title":"","title_size":48,"title_width":12,"heading_h1":false,"text":"<p><strong>Thêm vào giỏ hàng 2 sản phẩm bạn yêu thích để nhận ưu đãi với giá 199K<\/strong><\/p>","image_width":120,"button_label":"","button_link":"","button_style":"auto","text_alignment":"center","enlarge_text":false,"full_width":false,"no_padding_bottom":false,"color_scheme":"standard","color_bg":"","color_text":""}},"rich_text_Hb8dpR":{"type":"rich-text","settings":{"subheading":"","title":"SẢN PHẨM ƯU ĐÃI","title_size":32,"title_width":12,"heading_h1":f